{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"restParams": true,
			"experimentalDecorators": true,
			"experimentalObjectRestSpread": true
		},
		"plugins": [
			"react",
			"babel",
			"import"
		],
		"extends": [
			"eslint-recommended"
		]
	},
	"rules": {
		"camelcase": 1,
		"comma-dangle": 1,
		"curly": 1,
		"eol-last": 1,
		"eqeqeq": 0,
		"guard-for-in": 1,
		"new-cap": 1,

		"no-alert": 0,
		"no-bitwise": 0,
		"no-caller": 1,
		"no-console": 0,
		"no-debugger": 2,
		"no-empty": 1,
		"no-eq-null": 0,
		"no-extra-semi": 1,
		"no-invalid-regexp": 2,
		"no-mixed-requires": 1,
		"no-mixed-spaces-and-tabs": 1,
		"no-multi-spaces": 1,
		"no-new": 1,
		"no-obj-calls": 2,
		"no-shadow": 0,
		"no-trailing-spaces": 1,
		"no-undef": 1,
		"no-unneeded-ternary": 1,
		"no-unreachable": 1,
		"no-unused-vars": 0,
		"no-use-before-define": 0,
		"no-var": 1,
		"no-warning-comments": [
			0,
			{
				"terms": [ "todo", "fixme", "xxx", "TODO" ],
				"location": "start"
			}
		],

		"prefer-const": 1,
		"quotes": [ 1, "single" ],

		"react/jsx-sort-prop-types": 0,
		"react/require-extension": 0,
		"react/wrap-multilines": 0,
		
		"semi": 1
	},
	"settings": {
		"import/extensions": [".js", ".jsx"]
	}
}